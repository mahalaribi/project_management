{% extends 'home/index.html.twig' %}
{% block title %}Profil de {{ user.prenom }} {{ user.nom }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <h1 class="h5 mb-0"><i class="fas fa-user-circle me-2"></i> Profil Utilisateur</h1>
                </div>
                
                <div class="card-body bg-white">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            {% if user.image %}
                                <img src="{{ asset('uploads/images/' ~ user.image) }}" 
                                     alt="Photo de {{ user.prenom }}" 
                                     class="img-thumbnail rounded-circle mb-3"
                                     style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #dc3545;">
                            {% else %}
                                <div class="rounded-circle d-flex align-items-center justify-content-center mb-3" 
                                     style="width: 150px; height: 150px; background-color: #f8d7da; color: #dc3545; border: 3px solid #dc3545;">
                                    <i class="fas fa-user fa-3x"></i>
                                </div>
                            {% endif %}
                            
                            <div class="mt-3 d-flex flex-column gap-2">
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-danger btn-sm">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                {{ include('user/_delete_form.html.twig') }}
                            </div>
                        </div>
                        
                        <div class="col-md-8">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th class="bg-light text-danger" scope="row">ID</th>
                                        <td>{{ user.id }}</td>
                                    </tr>
                                    <tr>
                                        <th class="bg-danger text-white" scope="row">Email</th>
                                        <td>{{ user.email }}</td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light text-danger" scope="row">Rôles</th>
                                        <td>
                                            {% if 'ROLE_ADMIN' in user.roles %}
                                                <span class="badge bg-danger text-white">Administrateur</span>
                                            {% else %}
                                                <span class="badge bg-white text-danger border border-danger">Utilisateur</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-danger text-white" scope="row">Nom</th>
                                        <td>{{ user.nom }}</td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light text-danger" scope="row">Prénom</th>
                                        <td>{{ user.prenom }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer bg-white d-flex justify-content-start">
                    <a href="{{ path('app_user_index') }}" class="btn btn-outline-danger">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-header {
        background: linear-gradient(90deg, #dc3545 0%, #c82333 100%);
    }

    th {
        width: 30%;
        font-weight: 600;
    }

    td {
        vertical-align: middle;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: #fff;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.4em 0.6em;
    }

    .table th, .table td {
        padding: 0.75rem;
    }

    .table-bordered th {
        background-color: #f8f9fa;
    }
</style>
{% endblock %}
