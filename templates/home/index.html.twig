<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Dashboard{% endblock %}</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: -250px;
            width: 250px;
            height: 100%;
            background-color: white;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
            padding: 1rem;
            transition: all 0.3s ease-in-out;
            z-index: 1040;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .sidebar.show {
            left: 0;
        }

        .main-content {
            transition: margin-left 0.3s;
        }

        .main-content.shift {
            margin-left: 250px;
        }

        .sidebar .profile {
            text-align: center;
            margin-top: 2rem;
        }

        .sidebar .profile img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 50%;
            border: 2px solid #dc3545;
        }

        .sidebar .logout {
            text-align: center;
            margin-bottom: 1rem;
        }

        .sidebar .logout a {
            color: #dc3545;
            text-decoration: none;
            font-size: 0.9rem;
        }

        .sidebar .logout a:hover {
            text-decoration: underline;
        }

        .navbar {
            z-index: 1050;
        }

        .navbar-profile {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #dc3545;
        }
    </style>
</head>
<body>

<!-- ‚úÖ Sidebar -->
<div class="sidebar bg-white" id="sidebar">
    <div>
        <button class="btn btn-outline-danger close-btn position-absolute top-0 end-0 m-2" onclick="toggleSidebar()">
            <i class="bi bi-x-lg"></i>
        </button>

        <!-- üë§ User Profile -->
        <div>
        <div class="profile" style="margin-top:70px;">
            <img src="https://i.pravatar.cc/100" alt="User image">
            <h6 class="mt-2">{{ app.user.email }}</h6>
        </div>

        <!-- üß≠ Menu -->
        <ul class="nav flex-column mt-4">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_project_index') }}"><i class="bi bi-house"></i> Home</a>
            </li>
              {% if is_granted('ROLE_ADMIN') %}
            <li class="nav-item">
<a class="nav-link" href="{{ path('app_project_index') }}"><i class="bi bi-folder"></i> Projects</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_user_index') }}"><i class="bi bi-person"></i> Users</a>
            </li>
              {% endif %}
        </ul>
        </div>
    </div>

    <!-- üîì Logout at the bottom -->
    <div class="logout">
        <a href="{{ path('app_logout') }}">
            <i class="bi bi-box-arrow-right"></i> Se d√©connecter
        </a>
    </div>
</div>

<!-- ‚úÖ Navbar -->
<nav class="navbar navbar-light bg-white shadow-sm px-3 d-flex justify-content-between">
    <button class="btn btn-outline-danger" onclick="toggleSidebar()">
        <i class="bi bi-list"></i>
    </button>
    <!-- ‚úÖ Image user √† droite -->
    <img src="https://i.pravatar.cc/100" class="navbar-profile" alt="User">
</nav>

<!-- ‚úÖ Main content -->
<div class="main-content px-3" id="mainContent">
    {% block body %}
  
    {% endblock %}
    
</div>

    {% block session_check %}
    <script>
        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
            return null;
        }

        setTimeout(() => {
            const jwt = getCookie('BEARER');
            if (!jwt) {
                window.location.href = '/login';
            }
        }, 120000);
    </script>
    {% endblock %}
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Sidebar Toggle Script -->
<script>
    function toggleSidebar() {
        document.getElementById('sidebar').classList.toggle('show');
        document.getElementById('mainContent').classList.toggle('shift');
    }
</script>

</body>
</html>

